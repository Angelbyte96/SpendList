---
import { NewListButton } from '@/components/NewList'
import { ViewListButton } from '@/components/ViewList'
import Layout from '@/layouts/Layout.astro'
import { ShoppingCart } from 'lucide-react'
---

<Layout>
	<main class="flex flex-col items-center justify-center gap-4 dark:text-white">
		<section class="flex flex-col gap-2">
			<article class="flex flex-col items-center">
				<ShoppingCart size={78} />
				<h1 class="text-5xl">Lista de compras</h1>
				<p class="text-2xl">Gestiona tu lista de compras</p>
			</article>
			<NewListButton />
			<ViewListButton />
		</section>
	</main>
</Layout>
